<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>sum list</title>
    <link rel="stylesheet" href="/css/style2.css"> 
  </head>
  <body>
    <table>
      <% for(var i=0; i<nums.length; i++){ %>
        <% var color = (nums[i]%2) ? odd : even %>
        <tr>
          <td style="color:<%= color %>;">
            <%= nums[i] %>
          </td>
        </tr><br>
        <% } %>
      <tr>
        <td>
          <%= sum %>
        </td>
      </tr>
    </table>
  </body>
</html>
